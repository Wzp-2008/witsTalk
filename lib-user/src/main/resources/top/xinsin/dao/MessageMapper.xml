<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.xinsin.dao.MessageMapper">
    <insert id="SendMessage" parameterType="top.xinsin.pojo.Message">
        insert into message set content=#{content},sender=#{sender},type=#{type},sendtime=#{sendtime};
    </insert>
    <update id="ReCall" parameterType="top.xinsin.pojo.Message">
        update message set recall = 1 where 'id' = #{id} and 'content' = #{content};
    </update>
    <select id="GetSomeMessage" resultType="top.xinsin.pojo.Message">
        select * from `message` where `recall` = 0 and `id` >= #{id_min} and `id` <= #{id_max};
    </select>
    <select id="GetAllMessage" resultType="top.xinsin.pojo.Message">
        select * from message where recall=0
    </select>
    <select id="getPlayerCount" resultType="top.xinsin.pojo.Online">
        SELECT `user`.username,`user`.auth,`user`.base64 from `user` WHERE `user`.`online`=1;
    </select>
    <select id="GetAllMessageCount" resultType="Integer">
        SELECT table_rows from information_schema.tables where table_name = 'message';
    </select>
</mapper>